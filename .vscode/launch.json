  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "PyTest test_app",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-sv"],
      "program": "${workspaceFolder}/tests/test_app.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Django: Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/setup.py",
      "env": { "DJANGO_SETTINGS_MODULE": "myproject.settings.test" },
      "args": ["test"],
      "django": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Python test_app 2",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [],
      // "pythonPath": "${config:python.pythonPath}",
      "program": "${workspaceFolder}/tests/test_app.py"
      // "console": "integratedTerminal"
    }
  ]
}
