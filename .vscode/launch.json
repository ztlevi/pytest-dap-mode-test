  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python main",
      "type": "python",
      "request": "launch",
      "args": ["-sv"],
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest test_app",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-sv"],
      "program": "${workspaceFolder}/tests/test_app.py",
      "console": "integratedTerminal"
    }
  ]
}
